<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_rounded_background"
    android:padding="8dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/mtc_center_name_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mtc_center_incharge_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mtc_center_name_txt_view"/>

    <TextView
        android:id="@+id/mtc_center_address_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mtc_center_incharge_txt_view"/>

    <TextView
        android:id="@+id/mtc_center_mobile_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mtc_center_address_txt_view"/>

    <TextView
        android:id="@+id/mtc_center_beds_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mtc_center_mobile_txt_view"/>

    <TextView
        android:id="@+id/mtc_center_email_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mtc_center_beds_txt_view"/>

    <TextView
        android:id="@+id/mtc_center_password_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mtc_center_email_txt_view"/>


</RelativeLayout>