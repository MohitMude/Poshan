<?xml version="1.0" encoding="utf-8"?>


   <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="6">


        <TextView
            android:id="@+id/txt_view_mtc_analysis_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_weight="2"
            android:padding="@dimen/activity_horizontal_margin"/>


        <TextView
            android:id="@+id/txt_view_mtc_analysis_total_beds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:padding="@dimen/activity_horizontal_margin"/>


        <TextView
            android:id="@+id/txt_view_mtc_analysis_vacant_beds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:padding="@dimen/activity_horizontal_margin"/>


        <TextView
            android:id="@+id/txt_view_mtc_analysis_about_to_discharge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:padding="@dimen/activity_horizontal_margin"/>

       <TextView
           android:id="@+id/txt_view_mtc_analysis_average_bed_occupancy"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:textColor="@color/colorPrimary"
           android:layout_weight="1"
           android:padding="@dimen/activity_horizontal_margin"/>

    </LinearLayout>




