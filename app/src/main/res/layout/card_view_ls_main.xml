<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/card_view_child_details"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ic_rounded_background"
    android:padding="8dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/txt_view_child_name_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txt_view_father_name_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>


    <TextView
        android:id="@+id/txt_view_no_of_days_left_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>


    <TextView
        android:id="@+id/txt_view_mobile_no_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>


</LinearLayout>