<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_rounded_background"
    android:paddingBottom="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/waiting_list_child_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/waiting_list_father_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waiting_list_child_name"/>

    <TextView
        android:id="@+id/waiting_list_mother_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waiting_list_father_name"/>

    <TextView
        android:id="@+id/waiting_list_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waiting_list_mother_name"/>
    <TextView
        android:id="@+id/waiting_list_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waiting_list_age"/>

    <TextView
        android:id="@+id/waiting_list_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waiting_list_block"/>

    <TextView
        android:id="@+id/waiting_list_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/waiting_list_address"/>



</RelativeLayout>