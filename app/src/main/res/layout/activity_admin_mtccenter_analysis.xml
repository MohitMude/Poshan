<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminMTCCenterAnalysis"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="6"
    android:background="@drawable/ic_rounded_background">
    <TextView
        android:text="CENTER NAME"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_weight="2"
        android:padding="@dimen/activity_horizontal_margin"/>


    <TextView
        android:text="Total Beds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_weight="1"
        android:padding="@dimen/activity_horizontal_margin"/>


    <TextView
        android:text="Vacant Beds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_weight="1"
        android:padding="@dimen/activity_horizontal_margin"/>


    <TextView
        android:text="About To Discharge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_weight="1"
        android:padding="@dimen/activity_horizontal_margin"/>

    <TextView
        android:text="Average Bed Occupancy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_weight="1"
        android:padding="@dimen/activity_horizontal_margin"/>

</LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mtc_center_analysis_recycler_view"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>